source 'https://gem.coop' do
  gem 'minitest'
  gem 'rspec', '~> 3.0'
end

gem 'rack'
gem 'puma', '>= 5.0'

source 'https://private.gems.example.com' do
  gem 'private_gem'
  gem 'another_private', require: false
end

