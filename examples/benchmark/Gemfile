source 'https://rubygems.org'

ruby '3.4.5'

# Core Rails
gem 'railties', '8.1.0.beta1'
gem 'activerecord', '8.1.0.beta1'

# Runtime gems
gem 'no_fly_list'
gem 'lapsoss'
gem 'actionmcp'

# State management gems
group :state_management do
  gem 'state_machines'
  gem 'state_machines-activerecord'
  gem 'chrono_machines'
  gem 'breaker_machines'
  gem 'throttle_machines'
end

# Database extensions
group :database do
  gem 'activerecord-postgis'
  gem 'activecypher'
  gem 'closure_tree'
end

# Testing
group :test do
  gem 'minitest-reporters-llm'
end

# Deployment
group :deployment do
  gem 'capistrano-puma'
  gem 'capistrano-sidekiq'
end
